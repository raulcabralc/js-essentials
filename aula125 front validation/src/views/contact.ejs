<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-4">
      <h1 class="text-center">Contact</h1>
      <p class="text-center lead">Create or edit a contact below.</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          <% if (contact._id) { %>
          <form class="form-contact" action="/contact/edit/<%= contact._id %>" method="POST">
          <% } else { %>
          <form class="form-contact" action="/contact/register" method="POST">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label class="form-label display-6">Name</label>
              <input
                value="<%= contact.name %>"
                type="text"
                class="form-control"
                name="name"
                placeholder="Contact name"
              />
            </div>
            <div class="mb-3">
              <label class="form-label display-6">Surname</label>
              <input
                value="<%= contact.surname %>"
                type="text"
                class="form-control"
                name="surname"
                placeholder="Contact surname"
              />
            </div>
            <div class="mb-3">
              <label class="form-label display-6">Number</label>
              <input
                value="<%= contact.number %>"
                type="tel"
                class="form-control"
                name="number"
                placeholder="Contact number"
              />
            </div>
            <div class="mb-3">
              <label class="form-label display-6">Email</label>
              <input
                value="<%= contact.email %>"
                type="email"
                class="form-control"
                name="email"
                placeholder="Contact email"
              />
            </div>
            <button type="submit" class="btn btn-dark">Save</button>
          </form>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('includes/footer') %>
</div>
