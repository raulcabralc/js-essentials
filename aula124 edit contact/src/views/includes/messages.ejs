<% if (errors && errors.length > 0) { %>

<div class="row">
  <div class="col">
    <div class="alert alert-danger">
      <% errors.forEach(error => { %> <%- error %><br />
      <% }); %>
    </div>
  </div>
</div>

<% } %> <% if (success && success.length > 0) { %>

<div class="row">
  <div class="col">
    <div class="alert alert-success">
      <% success.forEach(message => { %> <%- message %><br />
      <% }); %>
    </div>
  </div>
</div>

<% } %> <% if (dark && dark.length > 0) { %>

<div class="row">
  <div class="col">
    <div class="alert alert-dark" style="color: black">
      <% dark.forEach(message => { %> <%- message %><br />
      <% }); %>
    </div>
  </div>
</div>

<% } %>
